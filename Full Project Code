#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <Servo.h>

// Pin Definitions
const int trigPin = A1;
const int echoPin = A2;
const int gasSensorPin = A0;
const int buzzerPin = 8;
const int servoPin = 9;

// Motor Driver Pins (for L298N Motor Driver)
const int motor1A = 2;  // Motor 1: Input 1
const int motor1B = 3;  // Motor 1: Input 2
const int motor2A = 4;  // Motor 2: Input 1
const int motor2B = 5;  // Motor 2: Input 2
const int enA = 6;      // Enable pin for Motor A
const int enB = 7;      // Enable pin for Motor B

// I2C LCD address
const int lcdAddr = 0x27;

// Global Objects
Servo myservo;
LiquidCrystal_I2C lcd(lcdAddr, 16, 2); // Address 0x27, 16 columns, 2 rows

bool gasDetected = false;

void setup() {
  // Set motor pins as outputs
  pinMode(motor1A, OUTPUT);
  pinMode(motor1B, OUTPUT);
  pinMode(motor2A, OUTPUT);
  pinMode(motor2B, OUTPUT);
  pinMode(enA, OUTPUT);
  pinMode(enB, OUTPUT);

  // Set sensor pins
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(gasSensorPin, INPUT);
  pinMode(buzzerPin, OUTPUT);

  // Initialize servo
  myservo.attach(servoPin);
  myservo.write(90); // Center the servo

  // Initialize serial communication
  Serial.begin(9600);

  // Initialize LCD via I2C
  lcd.init();
  lcd.backlight();
  lcd.print("Initializing...");

  delay(2000); // Wait for initialization
  lcd.clear();
  lcd.print("System Ready");
  delay(1000);
  lcd.clear();
}

void loop() {
  // Measure distance
  long duration, distance;
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distance = (duration / 2) / 29.1;

  // Measure gas level
  int gasLevel = analogRead(gasSensorPin);

  if (gasLevel > 300) { 
    if (!gasDetected) {
      gasDetected = true;
      stopMotors();
      digitalWrite(buzzerPin, HIGH);
      lcd.clear();
      lcd.print("Gas Detected!");
      Serial.println("Gas leakage detected! Moving towards the gas source.");
      delay(2000); // Wait before moving towards the gas source
    }

    moveTowardsGas();
  } else {
    digitalWrite(buzzerPin, LOW);
    if (gasDetected) {
      gasDetected = false;
      lcd.clear();
      lcd.print("Gas Level Normal");
      Serial.println("Gas level reduced. Resuming normal movement.");
      delay(1000);
      lcd.clear();
    }
   
    // Check for obstacles only when gas is not detected
    if (distance < 20) { // If obstacle is closer than 20 cm
      stopMotors();
      Serial.println("Obstacle detected, checking for alternative paths");
      checkAndMove();
    } else {
      moveForward();
      Serial.println("Moving forward");
    }
  }

  delay(1000); // Delay for a second
}

void checkAndMove() {
  // Check left
  myservo.write(0);
  delay(500);
  long leftDistance = measureDistance();

  // Check right
  myservo.write(180);
  delay(500);
  long rightDistance = measureDistance();

  // Center the servo back
  myservo.write(90);
  delay(500);

  // Decide direction based on distance measurements
  if (leftDistance > rightDistance && leftDistance > 20) {
    moveLeft();
    delay(1000);
  } else if (rightDistance > leftDistance && rightDistance > 20) {
    moveRight();
    delay(1000);
  } else {
    // No clear path, stop
    stopMotors();
    Serial.println("No clear path detected, stopping.");
  }

  // Move forward again after turning
  moveForward();
}

long measureDistance() {
  long duration, distance;
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distance = (duration / 2) / 29.1;
  return distance;
}

void moveTowardsGas() {
  // Measure distance in all directions to determine the gas source direction
  myservo.write(0); // Look left
  delay(500);
  long leftDistance = measureDistance();

  myservo.write(180); // Look right
  delay(500);
  long rightDistance = measureDistance();

  myservo.write(90); // Look forward
  delay(500);
  long forwardDistance = measureDistance();

  // Determine the direction with the highest gas concentration
  if (leftDistance > rightDistance && leftDistance > forwardDistance) {
    moveLeft();
  } else if (rightDistance > leftDistance && rightDistance > forwardDistance) {
    moveRight();
  } else {
    moveForward();
  }
}

void moveForward() {
  analogWrite(enA, 100);
  analogWrite(enB, 100);
  digitalWrite(motor1A, HIGH);
  digitalWrite(motor1B, LOW);
  digitalWrite(motor2A, HIGH);
  digitalWrite(motor2B, LOW);
}

void moveLeft() {
  analogWrite(enA, 100);
  analogWrite(enB, 100);
  digitalWrite(motor1A, LOW);
  digitalWrite(motor1B, HIGH);
  digitalWrite(motor2A, HIGH);
  digitalWrite(motor2B, LOW);
}

void moveRight() {
  analogWrite(enA, 100);
  analogWrite(enB, 100);
  digitalWrite(motor1A, HIGH);
  digitalWrite(motor1B, LOW);
  digitalWrite(motor2A, LOW);
  digitalWrite(motor2B, HIGH);
}

void stopMotors() {
  analogWrite(enA, 0);
  analogWrite(enB, 0);
  digitalWrite(motor1A, LOW);
  digitalWrite(motor1B, LOW);
  digitalWrite(motor2A, LOW);
  digitalWrite(motor2B, LOW);
}
